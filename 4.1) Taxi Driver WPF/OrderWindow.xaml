<Window x:Class="_4._1__Taxi_Driver_WPF.OrderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_4._1__Taxi_Driver_WPF"
        mc:Ignorable="d"
        Title="Замовлення" Height="300" Width="300" Icon="taxi-icon.ico">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Label x:Name="clientName" Content="Ім'я клієнта: " Grid.Row="0" Grid.Column="0" />
        <Label x:Name="clientNameDesc" Content="(відсутнє)" Grid.Row="0" Grid.Column="1" />
        <Label x:Name="clientPhone" Content="Моб. клієнта: " Grid.Row="1" Grid.Column="0" />
        <Label x:Name="clientPhoneDesc" Content="(відсутній)" Grid.Row="1" Grid.Column="1" />
        <Label x:Name="clientFrom" Content="Пункт відправлення:" Grid.Row="2" Grid.Column="0" Background="White" Foreground="Red" />
        <Label x:Name="clientFromDesc" Content="(немає)" Grid.Row="2" Grid.Column="1" Background="White" Foreground="Red" />
        <Label x:Name="clientTo" Content="Пункт призначення:" Grid.Row="3" Grid.Column="0" Background="White" Foreground="Green" />
        <Label x:Name="clientToDesc" Content="(немає)" Grid.Row="3" Grid.Column="1" Background="White" Foreground="Green" />
        <Label x:Name="clientTime" Content="Час відправлення: " Grid.Row="4" Grid.Column="0" Background="White" Foreground="Orange"/>
        <Label x:Name="clientTimeDesc" Content="(відсутній)" Grid.Row="4" Grid.Column="1" Background="White" Foreground="Orange"/>
    </Grid>
</Window>
