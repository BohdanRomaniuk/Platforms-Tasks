<Window x:Class="_5__Hexagones.ColorsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_5__Hexagones"
        mc:Ignorable="d"
        Title="Colors" Height="144.844" Width="215.232">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.2*"></RowDefinition>
            <RowDefinition Height="0.2*"></RowDefinition>
            <RowDefinition Height="0.2*"></RowDefinition>
            <RowDefinition Height="0.2*"></RowDefinition>
            <RowDefinition Height="0.2*"></RowDefinition>
        </Grid.RowDefinitions>
        <RadioButton x:Name="red" Content="Red" Grid.Row="0" Margin="4"/>
        <RadioButton x:Name="green" Content="Green" Grid.Row="1" Margin="4"/>
        <RadioButton x:Name="blue" Content="Blue" Grid.Row="2" Margin="4"/>
        <RadioButton x:Name="yellow" Content="Yellow" Grid.Row="3" Margin="4"/>
        <RadioButton x:Name="black" Content="Black" Grid.Row="4" Margin="4"/>
    </Grid>
</Window>
